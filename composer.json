{
    "name": "jackdpeterson/psr7-doctrine-querybuilder",
    "description": "PSR-7 Doctrine QueryBuilder module -- manipulate a Doctrine Query Builder instance with the $args from your PSR-7 requests",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "api",
        "doctrine",
        "filter",
        "order-by",
        "psr7",
        "slim"
    ],
    "require": {
        "php": "^7.1",
        "doctrine/orm" : "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6",
        "doctrine/doctrine-orm-module": "^1.1"
    },
    "suggest": {
        "ext/mongo": "Mongo extension, if using ODM"
    },
    "autoload": {
        "psr-4": {
            "jackdpeterson\\Doctrine\\QueryBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZFTest\\Doctrine\\QueryBuilder\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "upload-coverage": "coveralls -v",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    }
}
